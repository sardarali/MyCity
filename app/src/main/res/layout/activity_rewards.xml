<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_explore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="newwest.mycity.exploreActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_weight="0.19" />

    <TextView
        android:text="You arrived :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="123dp"
        app:srcCompat="@mipmap/park2"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:text="Congratuations!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="0.04"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3"
        android:weightSum="1">

        <TextView
            android:text="New Achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:scrollbarStyle="outsideInset"
            style="@android:style/Widget.DeviceDefault.Light.ScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        app:srcCompat="@mipmap/walk_blue"
                        android:id="@+id/imageView7" />

                    <TextView
                        android:text="+ 2.3 km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:text="145.7 km Traveled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_weight="0.30" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        app:srcCompat="@mipmap/park"
                        android:id="@+id/imageView8" />

                    <TextView
                        android:text="New Park Discovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_weight="0.77"
                        android:textAlignment="center" />

                    <TextView
                        android:text="6 Parks Visited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_weight="1.23" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        app:srcCompat="@mipmap/puzzle_red"
                        android:id="@+id/imageView9" />

                    <TextView
                        android:text="New Piece Found"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:layout_weight="18.42"
                        android:textAlignment="center" />

                    <TextView
                        android:text="2 More Pieces to Collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar3"
                android:numStars="5"
                android:rating="4"
                style="@style/Widget.AppCompat.RatingBar"
                android:stepSize="1"
                android:isIndicator="false"
                android:layout_weight="0.55"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="80dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="22dp"
                        app:srcCompat="@mipmap/face"
                        android:id="@+id/imageView10" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView17"
                        android:textSize="14sp"
                        android:layout_height="47dp"
                        tools:text="I met my husband while playing Frisbee at this park 23 years ago last month!"
                        android:text="I met my husband while playing Frisbee at this park 23 years ago last month!" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Like what you see? Tell us!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="31dp"
                android:layout_height="33dp"
                app:srcCompat="@mipmap/right"
                android:id="@+id/imageView11" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Queens Park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.19"
        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp" />

    <Button
        android:text="See Click Fix"
        android:id="@+id/button2"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView8" />

    <TextView
        android:text="2.3 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginEnd="16dp" />

</RelativeLayout>