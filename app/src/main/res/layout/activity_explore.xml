<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_explore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="newwest.mycity.exploreActivity">

    <TextView
        android:text="2.3km away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/treeDistance"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/distanceField_tree"
        android:layout_toEndOf="@+id/distanceField_tree"
        android:layout_alignTop="@+id/distanceField_tree" />

    <TextView
        android:text="Name:"
        android:layout_height="wrap_content"
        android:id="@+id/nameField_tree"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/treeSciName"
        android:layout_alignBottom="@+id/treeSciName"
        android:layout_alignStart="@+id/distanceField_tree" />

    <RatingBar
        android:layout_width="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_height="40dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/Gobtn_tree"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Rating:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingField"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_alignStart="@+id/distanceField_tree" />

    <TextView
        android:text="Distance:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/distanceField_tree"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_above="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="Queens Park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/treeSciName"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/treeDistance"
        android:layout_toEndOf="@+id/distanceField_tree" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/selectedText"
        android:layout_below="@+id/youSelectedParkText"
        android:layout_marginTop="14dp"
        android:layout_above="@+id/parkImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <Button
        android:text="Find Closest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Closestbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gobtn_tree"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Find furthest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Furthestbtn_tree"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="17dp"
        android:layout_marginRight="0dp" />

    <Button
        android:text="Search More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SearchMorebtn"
        android:layout_above="@+id/treeSciName"
        android:layout_alignStart="@+id/Furthestbtn_tree"
        android:layout_marginBottom="48dp" />

    <TextView
        android:text="You have Selected:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youSelectedParkText"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/queens_park_entrance_sign_web"
        android:id="@+id/parkImage"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_above="@+id/nameField_tree"
        android:layout_alignParentStart="true" />

</RelativeLayout>
