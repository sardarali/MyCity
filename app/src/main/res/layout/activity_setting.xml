<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="newwest.mycity.SettingActivity">

    <TextView
        android:text="My Quested Treasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/myQuestedTreasureText"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:text="Achievements:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achievementText"
        android:layout_below="@+id/badgesRelativeLayout"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:text="Badges:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/badgesText"
        android:layout_below="@+id/myQuestedTreasureText"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:layout_height="120dp"
        android:id="@+id/badgesRelativeLayout"
        android:layout_below="@+id/badgesText"
        android:layout_alignParentEnd="true"
        android:layout_width="300dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/linearLayout5"
            android:layout_marginEnd="18dp">

            <TextView
                android:text="Traveled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kmTraveledText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="Parks"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/parkBadgesText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="Trees"
                android:layout_height="wrap_content"
                android:id="@+id/treesBadgesText"
                android:layout_width="80dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="Public Arts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/publicArtsBadgesText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:text="34km "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kmShownText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="6 of 78 Visited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parksVisitedText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="280 of 14000 visited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/treesVisitedText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="16 of 24  visited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/publicArtsVisitedText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="21dp"
        android:layout_height="120dp"
        android:id="@+id/achievementsRelativeLayout"
        android:layout_width="320dp"
        android:layout_below="@+id/achievementText"
        android:layout_alignStart="@+id/badgesRelativeLayout"
        android:layout_alignEnd="@+id/myQuestedTreasureText">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="220dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Blood Donation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bloodDonationText"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="Salmonberry Days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/salmonBerryDaysText"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="Easter Egg Hunt 2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/easterEggHunt2016Text"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <CheckedTextView
                android:text="Data Hackathon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DataHackathonText"
                android:checked="true"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@mipmap/participation"
        android:id="@+id/imageView26"
        android:layout_width="50dp"
        android:layout_above="@+id/imageView23"
        android:layout_alignEnd="@+id/achievementText" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/redcheck"
        android:layout_above="@+id/achievementsRelativeLayout"
        android:layout_toEndOf="@+id/achievementText"
        android:id="@+id/imageView28" />

    <ImageView
        android:layout_height="25dp"
        app:srcCompat="@mipmap/blood2"
        android:layout_alignTop="@+id/achievementsRelativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView29"
        android:layout_width="25dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/salmonbelly"
        android:id="@+id/imageView30"
        android:layout_below="@+id/imageView29"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/public_art_icon"
        android:id="@+id/imageView25"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView24"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/park_icon"
        android:layout_marginTop="18dp"
        android:id="@+id/imageView23"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/badgesRelativeLayout"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/harmonic_tree"
        android:id="@+id/imageView24"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView23"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@mipmap/km"
        android:id="@+id/imageView20"
        android:layout_height="40dp"
        android:layout_below="@+id/badgesText"
        android:layout_alignEnd="@+id/imageView30" />

    <ImageView
        app:srcCompat="@mipmap/events_icon"
        android:layout_below="@+id/imageView30"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView31"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/hackathon"
        android:layout_below="@+id/imageView31"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView32" />

</RelativeLayout>
